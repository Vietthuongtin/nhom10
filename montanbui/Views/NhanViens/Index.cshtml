@model IEnumerable<montanbui.Models.NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<h2>Danh sách nhân viên</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Họ và tên</th>
            <th>Ngày sinh</th>
            <th>Giới tính</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Chức vụ</th>
            <th>Lương</th>
            <th>Ngày vào làm</th>
            <th>Mật khẩu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                <td>@item.GioiTinh</td>
                <td>@item.DiaChi</td>
                <td>@item.SDT</td>
                <td>@item.Email</td>
                <td>@item.ChucVu</td>
                <td>@item.Luong</td>
                <td>@item.NgayVaoLam?.ToString("dd/MM/yyyy")</td>
                <td>@item.MatKhau</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaNV">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.MaNV">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaNV">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
