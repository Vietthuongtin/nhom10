<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FastFoodManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-warning fw-bold" asp-controller="Home" asp-action="Index">
                    🍔 FastFood <span class="text-primary">Manager</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MonAns" asp-action="Index">🍽 Món ăn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="LoaiMonAns" asp-action="Index">📂 Loại món</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DonHangs" asp-action="Index">📦 Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="NhanViens" asp-action="Index">👨‍🍳 Nhân viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="KhachHangs" asp-action="Index">🧑‍💼 Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="PhanHois" asp-action="Index">💬 Phản hồi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CT_DonHang" asp-action="Index">Chi Tiết Đơn Hàng</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("TenDangNhap") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-success">👋 Xin chào, @Context.Session.GetString("TenDangNhap")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="DangNhaps" asp-action="DangXuat">🔓 Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="DangNhaps" asp-action="Index">🔐 Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">     
            <a> Địa Chỉ Quán Số Nhà 123, NGÕ 456, Xã 789, Thành Phố Bồi Đầm Già</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
