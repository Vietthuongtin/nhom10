<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - montanbui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/montanbui.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />


</head>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


<body>
    <header>
  
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-danger fs-3" href="/">
                    🍔 FastFood<span class="text-primary">Manager</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-2">
                        <li class="nav-item">
                            <a class="nav-link active" href="/MonAns">🧾 Thực đơn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/LoaiMonAns">🍱 Loại món</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/DonHangs">📦 Đơn hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/NhanViens">👨‍🍳 Nhân viên</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/KhachHangs">👤 Khách hàng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/PhanHois">💬 Phản hồi</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - montanbui - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
